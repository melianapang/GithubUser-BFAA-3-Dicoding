<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryDark">@color/green_brown</item>
        <item name="colorAccent">@color/dutch_white</item>
    </style>

    <style name="SplashScreenStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">14dp</item>
        <item name="android:windowBackground">@color/gold</item>
        <item name="android:textColor">@color/dark_brown</item>
        <item name="android:layout_gravity">top|center</item>
    </style>

</resources>